---
import CTAButton from "./CTAButton.astro";
import StarRating from "./StarRating.astro";

type RankingItem = {
  name: string;
  priceText?: string | null;
  rating?: number | null;
  features: string[];
  logoUrl?: string | null;
  officialUrl: string;
  campaignText?: string | null;
  summary: string;
};

type Props = {
  item: RankingItem;
  rank: number;
};

const { item, rank } = Astro.props satisfies Props;
---

<article class="relative overflow-hidden rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm">
  <div class="flex items-start gap-4">
    <div class="shrink-0">
      <div class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-sky-50 text-lg font-bold text-sky-700 ring-1 ring-sky-200">
        {rank}
      </div>
      <div class="mt-1 text-center text-xs text-zinc-500">位</div>
    </div>

    <div class="min-w-0 flex-1">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h2 class="truncate text-lg font-semibold text-zinc-900">{item.name}</h2>
          <p class="mt-1 text-sm text-zinc-600">{item.summary}</p>
        </div>
        {item.logoUrl ? (
          <img
            src={item.logoUrl}
            alt={`${item.name} ロゴ`}
            loading="lazy"
            decoding="async"
            class="h-10 w-auto max-w-[140px] rounded bg-white p-1 ring-1 ring-zinc-200"
          />
        ) : null}
      </div>

      <div class="mt-4 flex flex-wrap items-center gap-3">
        <StarRating value={item.rating ?? null} />
        {item.priceText ? (
          <span class="rounded-full bg-zinc-100 px-3 py-1 text-xs font-medium text-zinc-700">{item.priceText}</span>
        ) : null}
        {item.campaignText ? (
          <span class="rounded-full bg-emerald-50 px-3 py-1 text-xs font-medium text-emerald-800 ring-1 ring-emerald-200">
            {item.campaignText}
          </span>
        ) : null}
      </div>

      {item.features?.length ? (
        <ul class="mt-4 grid gap-2 text-sm text-zinc-700 sm:grid-cols-2">
          {item.features.slice(0, 6).map((f) => (
            <li class="flex gap-2">
              <span class="mt-1 inline-block h-2 w-2 shrink-0 rounded-full bg-emerald-600" aria-hidden="true"></span>
              <span>{f}</span>
            </li>
          ))}
        </ul>
      ) : null}

      <div class="mt-5">
        <CTAButton href={item.officialUrl} />
      </div>
    </div>
  </div>
</article>

