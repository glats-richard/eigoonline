---
import CTAButton from "./CTAButton.astro";

type Props = {
  label?: string;
  title: string;
  body: string;
  ctaHref: string;
  ctaLabel?: string;
};

const { label = "PR", title, body, ctaHref, ctaLabel = "公式サイトをチェック" } = Astro.props satisfies Props;
---

<section class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm">
  <div class="flex items-center gap-2">
    <h3 class="text-base font-extrabold text-zinc-900">{title}</h3>
    <span class="inline-flex items-center rounded-md bg-zinc-900 px-2 py-0.5 text-xs font-extrabold text-white">{label}</span>
  </div>
  <p class="mt-3 text-sm leading-relaxed text-zinc-700">{body}</p>
  <div class="mt-4">
    <CTAButton href={ctaHref} label={ctaLabel} />
  </div>
</section>

