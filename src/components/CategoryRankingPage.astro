---
import Layout from "../layouts/Layout.astro";
import RankingListItem from "./RankingListItem.astro";
import CompareTable from "./CompareTable.astro";
import SchoolDetailSection from "./SchoolDetailSection.astro";
import Sidebar from "./Sidebar.astro";
import { getReviewStats } from "../utils/reviewStats";
import { dbEnvError, query } from "../lib/db";
import { getSchoolsMerged } from "../lib/schools";
import { getCollection } from "astro:content";

type RankingCategory =
  | "overall"
  | "daily"
  | "business"
  | "kids"
  | "beginner"
  | "senior"
  | "businessman"
  | "lowcost"
  | "one-on-one"
  | "student"
  | "elementary"
  | "junior-high"
  | "high-school";

type Props = {
  category: RankingCategory;
  /** Override <h1> title */
  heading?: string;
  /** Optional intro text */
  lead?: string;
};

const { category, heading, lead } = Astro.props satisfies Props;

const schools = await getSchoolsMerged();
const rankings = await getCollection("rankings");
const categories = await getCollection("categories");
const banners = await getCollection("banners");
const reviews = await getCollection("reviews");

const schoolsById = new Map(schools.map((s) => [s.id, s.data] as const));
const ranking = rankings.find((r) => r.data.category === category)?.data ?? null;

const reviewsBySchoolId = new Map(reviews.map((r) => [r.data.schoolId, r.data.items] as const));
const reviewStatsBySchoolId = new Map(reviews.map((r) => [r.data.schoolId, getReviewStats(r.data.items)] as const));

const resolveItems = (items: string[] | undefined) =>
  (items ?? [])
    .map((id) => ({ id, data: schoolsById.get(id) }))
    .filter((x): x is { id: string; data: NonNullable<typeof x.data> } => Boolean(x.data));

const items = resolveItems(ranking?.items);

// DBの承認済み口コミ（全件）も含めた平均・件数を作る（静的 + DB）
type DbAggRow = { school_id: string; count: number; avg: number | null };
const dbAggBySchoolId = new Map<string, { count: number; avg: number | null }>();

// Featured(1-5)のみ、表示用レビューとして取得
type DbFeaturedRow = {
  school_id: string;
  nickname: string | null;
  overall_rating: number | null;
  body: string | null;
  improvement_points: string | null;
};
const dbFeaturedBySchoolId = new Map<
  string,
  { age: string; rating: number; body: string; improvementPoints?: string | null }[]
>();
if (!dbEnvError && items.length) {
  try {
    const ids = items.map((x) => x.id);
    const res = await query<DbAggRow>(
      "select school_id, count(*)::int as count, avg(overall_rating)::float as avg from reviews where status = 'approved' and overall_rating is not null and school_id = any($1::text[]) group by school_id",
      [ids],
    );
    for (const r of res.rows ?? []) {
      const avg = typeof r.avg === "number" && Number.isFinite(r.avg) ? r.avg : null;
      dbAggBySchoolId.set(r.school_id, { count: Number(r.count) || 0, avg });
    }

    const feat = await query<DbFeaturedRow>(
      "select school_id, nickname, overall_rating, body, improvement_points from reviews where status = 'approved' and featured_rank between 1 and 5 and overall_rating is not null and body is not null and school_id = any($1::text[]) order by school_id asc, featured_rank asc",
      [ids],
    );
    for (const r of feat.rows ?? []) {
      if (typeof r.overall_rating !== "number" || !Number.isFinite(r.overall_rating) || !r.body) continue;
      const existing = dbFeaturedBySchoolId.get(r.school_id) ?? [];
      existing.push({
        age: r.nickname || "ユーザー",
        rating: r.overall_rating,
        body: r.body,
        improvementPoints: r.improvement_points ?? null,
      });
      dbFeaturedBySchoolId.set(r.school_id, existing);
    }
  } catch {
    // best-effort: fall back to static only
  }
}

const combinedReviewStatsBySchoolId = new Map<string, { count: number; avg: number | null }>();
for (const { id } of items) {
  const staticStats = reviewStatsBySchoolId.get(id) ?? { count: 0, avg: null };
  const dbStats = dbAggBySchoolId.get(id) ?? { count: 0, avg: null };
  const staticSum = (staticStats.avg ?? 0) * (staticStats.count ?? 0);
  const dbSum = (dbStats.avg ?? 0) * (dbStats.count ?? 0);
  const totalCount = (staticStats.count ?? 0) + (dbStats.count ?? 0);
  const totalAvg = totalCount ? Math.round(((staticSum + dbSum) / totalCount) * 10) / 10 : null;
  combinedReviewStatsBySchoolId.set(id, { count: totalCount, avg: totalAvg });
}

const itemsRated = items.map((x) => {
  const stats = combinedReviewStatsBySchoolId.get(x.id);
  const rating = stats?.count ? stats.avg : null;
  return { ...x, data: { ...x.data, rating } };
});

const sidebarBannersTop = banners.filter((b) => ["sidebar", "sidebar_top"].includes(b.data.placement)).map((b) => b.data);
const sidebarBannersMid = banners.filter((b) => b.data.placement === "sidebar_mid").map((b) => b.data);
const sidebarBannersBottom = banners.filter((b) => b.data.placement === "sidebar_bottom").map((b) => b.data);

const catLevel = categories.filter((c) => c.data.group === "level").map((c) => c.data);
const catAge = categories.filter((c) => c.data.group === "age").map((c) => c.data);
const catReco = categories.filter((c) => c.data.group === "recommend").map((c) => c.data);

const pageTitle = ranking?.title ? `${ranking.title}｜オンライン英会話ランキング` : "ランキング｜オンライン英会話";
const pageDesc =
  lead ?? ranking?.description ?? "カテゴリ別にオンライン英会話を比較できるランキングページです。";
---

<Layout title={pageTitle} description={pageDesc} ogImage="/fv_1.webp" headerOverlay>
  <Fragment slot="head">
    <link
      rel="preload"
      as="image"
      href="/fv_1-640.webp"
      imagesrcset="/fv_1-640.webp 640w, /fv_1-768.webp 768w, /fv_1.webp 1024w"
      imagesizes="(max-width: 640px) 100vw, 1024px"
      fetchpriority="high"
    />
  </Fragment>

  <main class="mx-auto w-full max-w-6xl px-4 pb-10 pt-4 sm:pb-12 sm:pt-6">
    <section class="pt-10 sm:pt-12">
      <div class="mt-3 grid gap-6 sm:mt-4 lg:grid-cols-3 lg:items-start">
        <div class="min-w-0 space-y-6 lg:col-span-2">
          <!-- Hero image -->
          <div class="relative overflow-hidden rounded-2xl border border-zinc-200 bg-white shadow-sm">
          <picture>
            <source
              srcset="/fv_1-640.webp 640w, /fv_1-768.webp 768w, /fv_1.webp 1024w"
              sizes="(max-width: 640px) 100vw, 1024px"
              type="image/webp"
            />
            <img
              src="/fv_1.webp"
              alt="オンライン英会話 おすすめランキング"
              loading="eager"
              decoding="async"
              fetchpriority="high"
              width="1024"
              height="565"
              class="block h-auto w-full object-cover"
            />
          </picture>

          <div class="absolute inset-x-0 top-0 bg-linear-to-b from-black/55 to-transparent px-5 pb-6 pt-5">
            <h1 class="text-2xl font-extrabold tracking-tight text-white sm:text-3xl">
              {heading ?? ranking?.title ?? "ランキング"}
            </h1>
            <p class="mt-2 max-w-2xl text-sm font-semibold text-white/90 sm:text-base">
              {pageDesc}
            </p>
          </div>

          </div>

          <!-- Main content -->
          <section class="rounded-2xl border-2 border-[#F49BB5] bg-white p-5 shadow-sm sm:p-6">
            <div class="flex items-end justify-between gap-4">
              <div>
                <h2 class="text-xl font-extrabold text-zinc-900">ランキング</h2>
                <p class="mt-1 text-sm text-zinc-600">上位スクールを順番に紹介します。</p>
              </div>
              <a class="link-brand text-sm font-extrabold underline underline-offset-2" href="/">
                トップへ
              </a>
            </div>

              <div class="mt-4 grid gap-4">
              {itemsRated.slice(0, 8).map((x, idx) => (
                <RankingListItem
                  item={x.data}
                  offerId={x.id}
                  rank={idx + 1}
                  reviews={dbFeaturedBySchoolId.get(x.id) ?? reviewsBySchoolId.get(x.id) ?? []}
                  reviewStats={combinedReviewStatsBySchoolId.get(x.id) ?? null}
                />
              ))}
            </div>
          </section>

          <section id="compare" class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm sm:p-6">
            <h2 class="text-xl font-extrabold text-zinc-900">比較表</h2>
            <p class="mt-1 text-sm text-zinc-600">上位スクールを項目ごとに比較できます。</p>

            {ranking ? (
              <div class="mt-4">
                <div class="sm:hidden">
                  <CompareTable ranking={{ title: ranking.title, items: itemsRated.slice(0, 4) }} variant="stack" />
                </div>
                <div class="hidden sm:block">
                  <CompareTable ranking={{ title: ranking.title, items: itemsRated.slice(0, 4) }} variant="table" />
                </div>
              </div>
            ) : (
              <div class="mt-4 text-sm font-semibold text-zinc-500">ランキングデータが見つかりません。</div>
            )}
          </section>

          <section id="details" class="space-y-6">
            <div class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm">
              <h2 class="text-xl font-extrabold text-zinc-900">ランキング詳細</h2>
              <p class="mt-1 text-sm text-zinc-600">各社の特徴やキャンペーンをまとめて確認できます。</p>
            </div>

            {itemsRated.map((x, idx) => (
              <div id={`school-${x.id}`} class="scroll-mt-24">
                <SchoolDetailSection offerId={x.id} rank={idx + 1} item={x.data} reviews={reviewsBySchoolId.get(x.id) ?? []} />
              </div>
            ))}
          </section>
        </div>

        <!-- Desktop sidebar -->
        <div class="hidden lg:block lg:col-span-1">
          <Sidebar
            bannersTop={sidebarBannersTop}
            bannersMid={sidebarBannersMid}
            bannersBottom={sidebarBannersBottom}
            popular={itemsRated.slice(0, 8).map((x) => ({ offerId: x.id, name: x.data.name, officialUrl: x.data.officialUrl, logoUrl: x.data.logoUrl }))}
            categories={[
              ...catReco.map((c) => ({ title: c.title, href: c.href })),
              ...catAge.map((c) => ({ title: c.title, href: c.href })),
              ...catLevel.map((c) => ({ title: c.title, href: c.href })),
            ]}
          />
        </div>
      </div>
    </section>

    <section class="mt-10 lg:hidden">
      <Sidebar
        bannersTop={sidebarBannersTop}
        bannersMid={sidebarBannersMid}
        bannersBottom={sidebarBannersBottom}
        popular={itemsRated.slice(0, 8).map((x) => ({ offerId: x.id, name: x.data.name, officialUrl: x.data.officialUrl, logoUrl: x.data.logoUrl }))}
        categories={[
          ...catReco.map((c) => ({ title: c.title, href: c.href })),
          ...catAge.map((c) => ({ title: c.title, href: c.href })),
          ...catLevel.map((c) => ({ title: c.title, href: c.href })),
        ]}
      />
    </section>
  </main>
</Layout>

